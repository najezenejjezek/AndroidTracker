<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="User settings">
        <EditTextPreference
            android:key="edittext_preference_username"
            android:title="Username"
            android:dialogTitle="Username for web app" />


    </PreferenceCategory>

    <PreferenceCategory
        android:title="App settings">

        <CheckBoxPreference
            android:key="checkbox_preference_wifi"
            android:title="Allow turn on wifi"
            android:summary="Ability to change wifi state" />
        <CheckBoxPreference
            android:key="checkbox_preference_gps"
            android:title="Max Gps"
            android:summary="often using of GPS function" />

        <EditTextPreference
            android:key="edittext_preference_acc"
            android:title="Min accuracy in metres"
            android:dialogTitle="Min accuracy in metres" />

        <EditTextPreference
            android:key="edittext_preference_time"
            android:title="Refresh interval"
            android:summary="Max time between logs"
            android:dialogTitle="Refresh interval in seconds" />

    </PreferenceCategory>

</PreferenceScreen>