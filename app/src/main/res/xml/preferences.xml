<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="PreferenceCategory A">

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="Tracking"
            android:summary="disable/enable tracking function" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="PreferenceCategory B">

        <EditTextPreference
            android:key="edittext_preference_acc"
            android:title="Min accuracy in metres"
            android:dialogTitle="Min accuracy in metres" />

        <EditTextPreference
            android:key="edittext_preference_time"
            android:title="Refresh interval"
            android:summary="Max time between logs"
            android:dialogTitle="Refresh interval in seconds" />

    </PreferenceCategory>

</PreferenceScreen>